<!doctype html>
<html>
<head>
    <title>The Sign Up Cube</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>

  <section class="eventDetails">

    <% if (user.local.email) { %>
        <h2><%= eventDetails.eventTitle %></h2>
    <% } %>

  </section>

  <form action ="/saveTimeSlots?id=<%= eventDetails._id %>" method ="POST" class ="addTimeSlots">

    <section class ="date">

        <label for="todayDate">Date:</label>
        <input type="date" id="eventDate" name="date">

    </section>

    <section class ="startTime">

        <label for="startTime">Start Time:</label>
        <input type="time" id="startTime" name="startTime"
        min="00:00" max="24:00" required>
          
    </section>

    <section class ="endTime">

        <label for="endTime">End Time:</label>
        <input type="time" id="endTime" name="endTime"
        min="00:00" max="24:00" required>
          
    </section>

    <section class ="activityDescription">

        <label for="activityDescription">Activity Description:</label>
        <input type="text" id="activityDescription" name="activityDescription" required>
          
    </section>

    <section class ="numberVolunteersNeeded">

        <label for="numberVolunteersNeeded">Volunteers Needed:</label>
        <input type="number" id="numberVolunteersNeeded" name="numberVolunteersNeeded" required>
          
    </section>

    <button class ="buttonAddTimeSlots">Add Time Slots</button>

</form>

<section class = "displayTimeSlots">

<table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Date</th>
        <th scope="col">Start Time</th>
        <th scope="col">End Time</th>
        <th scope="col">Location/Activity Description</th>
        <th scope="col">Volunteers Needed</th>
      </tr>
    </thead>
    <tbody>
        <% for(var i =0; i <timeSlots.length; i++) { %>
            
        <tr>
            <!-- <th scope="row"></th> -->
            <td><%= timeSlots[i].date %></td>
            <td><%= timeSlots[i].startTime %></td>
            <td><%= timeSlots[i].endTime %></td>
            <td><%= timeSlots[i].activityDescription %></td>
            <td><%= timeSlots[i].numberVolunteersNeeded %></td>
        </tr>

        <% } %>
    </tbody>
  </table>
  
  
 
</section>

<section class ="secPublicSignUpSheet">
  <button class ="buttonPublicSignUpSheet hi" data-eventId = <%= eventDetails._id %>>Publish Sign Up Sheet</button>
</section>

<script type="text/javascript" src="main.js"></script>
</body>
</html>
